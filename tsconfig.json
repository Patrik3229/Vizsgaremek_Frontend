{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "typedocOptions": {
    "entryPoints": [
      "src/Components/auth/index.tsx",
      "src/Components/Logout.tsx",
      "src/Components/MainPage.tsx",
      "src/Components/Ratings.tsx",
      "src/Components/Search.tsx",
      "src/Components/SearchContent.tsx",
      "src/Components/Sidebar.tsx",
      "src/Components/TopRecipes.tsx",
      "src/routes/CreateRecipe.tsx",
      "src/routes/EditRecipe.tsx",
      "src/routes/EditUser.tsx",
      "src/routes/Login.tsx",
      "src/routes/Profile.tsx",
      "src/routes/RecipeView.tsx",
      "src/routes/Register.tsx",
      "src/routes/root.tsx",
      "src/routes/SearchResults.tsx"
    ],
    "out": "./docs",
    "excludeExternals": true,
    "excludePrivate": true
  }
}
